{
  "openapi": "3.1.0",
  "info": {
    "title": "GPT Activator API",
    "version": "1.0.0",
    "description": "API to verify user membership and usage status for GPT access."
  },
  "servers": [
    {
      "url": "https://scrpt.com"
    }
  ],
  "paths": {
    "/api/gpt/verify-gpt": {
      "post": {
        "operationId": "verifyUserAccess",
        "summary": "Check user access and mark GPT as used.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "{{userEmail}}"
                  },
                  "gptTitle": {
                    "type": "string",
                    "example": "Being Visible 1.0"
                  }
                },
                "required": [
                  "email",
                  "gptTitle"
                ]
              },
              "example": {
                "email": "{{userEmail}}",
                "gptTitle": "Being Visible 1.0"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "security": [
          {
            "apiKeyAuth": []
          }
        ]
      }
    }
  },
  "components": {
    "securitySchemes": {
      "apiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "x-api-key"
      }
    }
  }
}

