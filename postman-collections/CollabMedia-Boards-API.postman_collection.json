	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Auto-populate session cookies if available",
					"if (pm.environment.get('user_session_id')) {",
					"    pm.request.headers.add({",
					"        key: 'Cookie',",
					"        value: 'connect.sid=' + pm.environment.get('user_session_id')",
					"    });",
					"}"
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Auto-extract session cookies from login responses",
					"if (pm.response.headers.get('Set-Cookie')) {",
					"    const setCookieHeader = pm.response.headers.get('Set-Cookie');",
					"    const cookieMatch = setCookieHeader.match(/connect\\.sid=([^;]+)/);",
					"    if (cookieMatch) {",
					"        const sessionId = cookieMatch[1];",
					"        // Decode URL-encoded session ID",
					"        const decodedSessionId = decodeURIComponent(sessionId);",
					"        ",
					"        // Determine which session variable to set based on the endpoint",
					"        const url = pm.request.url.toString();",
					"        if (url.includes('/user/login')) {",
					"            pm.environment.set('user_session_id', decodedSessionId);",
					"            console.log('User session ID saved:', decodedSessionId);",
					"        } else if (url.includes('/admin/signin')) {",
					"            pm.environment.set('admin_session_id', decodedSessionId);",
					"            console.log('Admin session ID saved:', decodedSessionId);",
					"        } else if (url.includes('/subadmin/signin')) {",
					"            pm.environment.set('subadmin_session_id', decodedSessionId);",
					"            console.log('SubAdmin session ID saved:', decodedSessionId);",
					"        }",
					"    }",
					"}"
				]
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3002",
			"type": "string"
		}
	]
