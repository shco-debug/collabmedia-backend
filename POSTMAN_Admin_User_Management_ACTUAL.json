	"item": [
		{
			"name": "1. Authentication",
			"item": [
				{
					"name": "Admin Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    if (response.token) {",
									"        pm.collectionVariables.set('admin_jwt_token', response.token);",
									"        console.log('âœ… Admin JWT token saved');",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"admin@scrpt.com\",\n  \"password\": \"your_admin_password\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/user/login",
							"host": ["{{base_url}}"],
							"path": ["user", "login"]
						},
						"description": "Login with admin user (Role: admin)"
					}
				}
			]
		},
