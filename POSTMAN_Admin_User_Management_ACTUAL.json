{
	"info": {
		"name": "Admin - User Management (Actual Routes)",
		"description": "User management endpoints that actually exist in the codebase",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{admin_jwt_token}}",
